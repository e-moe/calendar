{% extends '::base.html.twig' %}

{% block title %}{{ 'calendar.index.title'|trans }}{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('bundles/levi9calendar/css/main.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
    <h1>{{ 'calendar.index.greetings'|trans({'%user%': app.user.username}) }}</h1>
    <p>{{ 'calendar.index.intro'|trans }}</p>

    <table>
        <thead>
            <tr>
                <th>{{ 'calendar.index.table.two_week'|trans }}</th>
                <th>{{ 'calendar.index.table.one_week'|trans }}</th>
                <th>{{ 'calendar.index.table.today'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            <tr class="wrapper">
                <td class="2week">
                    <table>
                        {% for exercise in calendarResults['today'] %}
                            <tr>
                                <td>{{ exercise.description }}</td>
                                <td>{{ exercise.weight }} x {{ exercise.count }}</td>
                            </tr>
                        {% endfor %}
                    </table>
                </td>
                <td class="1week">
                    <table>
                        {% for exercise in calendarResults['1_week_ago'] %}
                            <tr>
                                <td>{{ exercise.description }}</td>
                                <td>{{ exercise.weight }} x {{ exercise.count }}</td>
                            </tr>
                        {% endfor %}
                    </table>
                </td>
                <td class="today">
                    <table>
                        {% for exercise in calendarResults['2_weeks_ago'] %}
                            <tr>
                                <td>{{ exercise.description }}</td>
                                <td>{{ exercise.weight }} x {{ exercise.count }}</td>
                            </tr>
                        {% endfor %}
                    </table>
                </td>
            </tr>
        </tbody>
    </table>

    <p><a href="{{ path('logout') }}">{{ 'calendar.index.logout'|trans }}</a></p>

{% endblock %}

